<Window x:Class="HandTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="581" Width="1069" Loaded="Window_Loaded" >
    <Canvas HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="640">
        <Image x:Name="img_color" Height="480" Width="640" Canvas.Top="-10"/>
        <Ellipse x:Name="left_hand_pointer" Fill="#FF0B0BF5" Height="13" Canvas.Left="46" Stroke="Black" Canvas.Top="38" Width="15"/>
        <Ellipse x:Name="right_hand_pointer" Fill="#FFFF0878" Height="13" Canvas.Left="112" Stroke="Black" Canvas.Top="38" Width="15"/>
        <Button x:Name="btn_start" Content="Start" Canvas.Left="920" Width="75" Click="btn_start_Click" Canvas.Top="468"/>
        <Border x:Name="border_rect" BorderBrush="Black" BorderThickness="1" Height="100" Canvas.Left="451" Canvas.Top="77" Width="100"/>
        <Image x:Name="img_cropped" Height="189" Canvas.Left="757" Canvas.Top="38" Width="238"/>
        <Image x:Name="img_segmented" Height="189" Canvas.Left="757" Canvas.Top="247" Width="238"/>
    </Canvas>
</Window>
